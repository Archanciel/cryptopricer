    # ---------- cryptopricerguy.kv  ----------

# Reference cryptopricerguy.py
#: import main cryptopricerguy
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import ListItemButton kivy.uix.listview.ListItemButton
#: import ScrollEffect kivy.effects.scroll.ScrollEffect

CryptoPricerGUY:

<CryptoPricerGUY>:
    orientation: "vertical"
    commandTextInput: command
    commandList: commandListView
    resultOutputROTextInput: ro_log
    padding: 10
    spacing: 10

    BoxLayout:
        size_hint_y: None
        height: "30dp"

        TextInput:
            id: command
            background_color: 0,0,0,0
            foreground_color: 1,1,1,1
            focus: True
            #ENTER triggers root.submitCommand()
            multiline: False
            on_text_validate: root.submitCommand()

    BoxLayout:
        size_hint_y: None
        height: "30dp"
        ToggleButton:
            text: "History"
            size_hint_x: 15
            on_press: root.toggleCommandList()
        Button:
            text: "Delete"
            size_hint_x: 15
            on_press: root.deleteCommand()
        Button:
            text: "Replace"
            size_hint_x: 15
            on_press: root.replaceCommand()

    # Define starting data and point to the ListItemButton
    # in the Python code
    ListView:
        id: commandListView
        effect_cls: ScrollEffect #no effect !
        adapter: ListAdapter(data=[], cls=main.CommandListButton, args_converter=lambda row_index,rec: {'text':rec, 'on_press':root.commandSelected})
        height: '0dp'
        size_hint_y: None

    ScrollView:
        id: scrlv
        size_hint: (1, 1)
        effect_cls: ScrollEffect #avoid overscrolling
        TextInput:
            id: ro_log
            size_hint: (1, None)
            height: max(self.minimum_height, scrlv.height) #required to enable scrolling when list starts to grow
            readonly: True
            background_color: 0,0,0,0
            foreground_color: 1,1,1,1
